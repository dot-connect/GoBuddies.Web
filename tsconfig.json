{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "target": "ES6",
    "sourceMap": true,
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "files": [
    "typings/index.d.ts",
    "App/main.tsx",
    "App/**/*.ts",
    "App/**/*.tsx"
  ],
  "filesGlob": [
    "App/**/*.tsx",
    "App/**/*.ts"
  ],
  "exclude": [
      "node_modules/**/*.*",
    "typings/index.d.ts"
  ]
}
